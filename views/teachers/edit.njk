{% extends "layout.njk" %}

{% block content %}

<div class="card">

    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    
    </section>

    <section class="details">
        <form id="form-save" action="/teachers?_method=PUT" method="POST">        
            
            <h3>Editar professor</h3>
 
            <input
                type="hidden"
                name="id"
                value="{{ teacher.id }}"
            >

            {% include "teachers/fields.njk" %}
            <button form="form-delete" id="delete-button" type="submit">Deletar</button>
        </form>

        <form id="form-delete" action="/teachers?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{ teacher.id }}">
        </form>
    </section>
</div>

{% include "confirm.njk" %}

{% endblock content %}