<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ teacher.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Professor</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Nome do professor"
            value="{{ teacher.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date"
            name="birth"
            value="{{ teacher.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="formation">
            <option 
                value="high"
                {% if teacher.formation == "high" %}
                    selected
                {% endif %}
            >
                Ensino Médio Completo
            </option>

            <option
                value="college"
                {% if teacher.formation == "college" %}
                    selected
                {% endif %}
            >
                Ensino Superior Completo
            </option>

            <option
                value="master"
                {% if teacher.formation == "master" %}
                    selected
                {% endif %}
            >
                Mestrado
            </option>

            <option
                value="doctorate"
                {% if teacher.formation == "doctorate" %}
                    selected
                {% endif %}
            >
                Doutorado
            </option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input
                type="radio"
                name="class_type"
                value="presential"
                {% if teacher.class_type == "presential" %}
                    checked
                {% endif %}
            >
                Presencial
        </span>

        <span>
            <input
                type="radio"
                name="class_type"
                value="remotely"
                {% if teacher.class_type == "remotely" %}
                    checked
                {% endif %}
            >
                À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input 
            type="text"
            name="subjects"
            placeholder="Separe as matérias ensinadas por vírgula"
            value="{{ teacher.subjects }}"
        >
    </div>
</div>

<button id="save-button" type="submit">Salvar</button>