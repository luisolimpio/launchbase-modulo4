{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
    
    </section>

    <section class="details">
    
        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.formation }}</div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                {{ "Presencial" if teacher.class_type == "presential" else "À distância" }}    
            </div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for subject in teacher.subjects %}
                <span>{{ subject }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a class="button" href="/teachers/{{ teacher.id }}/edit">Editar</a>

    </section>
</div>

{% endblock content %}